<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class   name="org.codePlus.core.menu.MenuSetting" table="App_Menu_Setting">
		<id name="id" type="java.lang.Long" >
			<column name="Id"  />
			<generator class="foreign">
				<param name="property">menu</param>
			</generator>
		</id> 
		<one-to-one name="menu" 		class="org.codePlus.core.menu.Menu" constrained="true" />
		
		<many-to-one name="bookType"    		column="book_Type_Id"            		entity-name="org.codePlus.framework.model.core.baseInfo.BaseInformation" />
      	<many-to-one name="lesson"      		column="lesson_Id"            			entity-name="org.codePlus.framework.model.core.baseInfo.BaseInformation" />
		<many-to-one name="field"    			column="field_Id"            			entity-name="org.codePlus.framework.model.core.baseInfo.BaseInformation" />
      	<many-to-one name="grade"	      		column="grade_Id"            			entity-name="org.codePlus.framework.model.core.baseInfo.BaseInformation" />
      	
      	<many-to-one name="publisher"        	column="publisher_Id"            		entity-name="org.codePlus.core.publisher.Publisher" 	/>
      	<many-to-one name="publisherProduct"    column="publisher_Product_Id"           entity-name="org.codePlus.core.publisher.PublisherProduct" />
		
		<many-to-one name="createdBy"     column="CreatedBy"       entity-name="org.codePlus.framework.model.security.User" not-null="true"  update="false" />
		<many-to-one name="updatedBy"     column="UpdatedBy"       entity-name="org.codePlus.framework.model.security.User" not-null="true"  />
		<property column="CreatedDate" 	name="createdDate"   	not-null="true" update="false" />
		<property column="UpdatedDate" 	name="updatedDate" 	 	not-null="true"/>	
		
	</class>
</hibernate-mapping>
