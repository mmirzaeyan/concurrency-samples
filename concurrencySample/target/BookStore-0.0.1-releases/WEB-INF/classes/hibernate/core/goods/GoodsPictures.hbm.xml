<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.codePlus.core.goods.GoodsPictures" table="Core_Goods_Pics">
        <id name="id" type="java.lang.Long" >
			<column name="ID"  />
			 <generator class="identity" />
        </id> 
     
      	<many-to-one name="goods"        		column="goods_Id"        	entity-name="org.codePlus.core.goods.Goods" not-null="true"  unique-key="goods_Name_Code"/>
     
	    <property name="pictureName"        	column="picture_Name"    	type="string" not-null="true" 	unique-key="goods_Name_Code"/>
		<property name="pictureCode"        	column="picture_Code"    	type="string" not-null="true" 	unique-key="goods_Name_Code"/>
		<property name="description"        	column="description"    	type="string" />
		<property name="main"					column="is_Main"			type="boolean" not-null="true"   />
		
        <many-to-one 	name="createdBy"     	column="CreatedBy"       	entity-name="org.codePlus.framework.model.security.User" 	not-null="true"  update="false" />
		<many-to-one 	name="updatedBy"     	column="UpdatedBy"       	entity-name="org.codePlus.framework.model.security.User" 	not-null="true"  />
		<property 		name="createdDate"		column="CreatedDate" 	 	type="date" 	not-null="true"  	update="false" />
		<property 		name="updatedDate"		column="UpdatedDate" 	 	type="date" 	not-null="true"/>	
		<property 		name="ip"				column="Ip" 			 	type="string" 	not-null="true"   	update="false"/>
        
    
    </class>
</hibernate-mapping>
