<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class   name="org.codePlus.framework.model.core.baseInfo.BaseInformation" table="App_BaseInformation">
		<id name="id" type="java.lang.Long" >
			<column name="ID"  />
			 <generator class="identity" />
		</id> 
		
		<property column="Code"  		name="code"  			not-null="false" 	type="integer" unique-key="baseInformationHeader-code" />
		<property column="Topic"   		name="topic" 			not-null="true" 	type="string"  length="100"/>
		<property column="Description"  name="description"  	not-null="false" 	type="string" />
		<property column="ACTIVE"  		name="active"								type="boolean" />
	
		<many-to-one entity-name="org.codePlus.framework.model.core.baseInfo.BaseInformationHeader" name="parent" unique-key="baseInformationHeader-code" >
			<column name="ParentId" not-null="false"  />
		</many-to-one>
		<many-to-one entity-name="org.codePlus.framework.model.core.baseInfo.BaseInformation" name="masterInformation">
			<column name="Master_Information_Id" not-null="false"  />
		</many-to-one>
		
		<many-to-one name="createdBy"     column="CreatedBy"       entity-name="org.codePlus.framework.model.security.User" not-null="true"  update="false" />
		<many-to-one name="updatedBy"     column="UpdatedBy"       entity-name="org.codePlus.framework.model.security.User" not-null="true"  />
		<property column="CreatedDate" 	name="createdDate"   	not-null="true" update="false" />
		<property column="UpdatedDate" 	name="updatedDate" 	 	not-null="true"/>	
			
		
	</class>
</hibernate-mapping>
